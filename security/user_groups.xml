<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data> 
                
        <record model="ir.module.category" id="module_category_market_research">
            <field name="name" >Market Research</field>
            <field name="description">User access level for the Market Research module</field>
            <field name="sequence">80</field>
        </record>
 
        <record id="group_employee" model="res.groups">
            <field name="name">Employee</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="market_research.module_category_market_research"/>
        </record>


        <record id="group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('market_research.group_employee'))]"/>
            <field name="category_id" ref="market_research.module_category_market_research"/>
        </record>
        
        <!-- Employees only have access to tickets they're assigned to -->
        <record id="market_research_employee_tp_rule" model="ir.rule">
            <field name="name">Tradepoint Order Employee Access Rule</field>
            <field name="model_id" ref="market_research.model_market_research_tradepoint_order" />
            <field name="domain_force">[('assigned_user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('market_research.group_employee'))]"/>
        </record>

        <record id="market_research_employee_pm_rule" model="ir.rule">
            <field name="name">Price Measurement Employee Access Rule</field>
            <field name="model_id" ref="market_research.model_market_research_price_measurement" />
            <field name="domain_force">[('tradepoint_order_id.assigned_user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('market_research.group_employee'))]"/>
        </record>

        <!-- Explicitly specify manager access rules -->        
        <record id="market_research_manager_tp_rule" model="ir.rule">
            <field name="name">Tradepoint Order Manager Access Rule</field>
            <field name="model_id" ref="market_research.model_market_research_tradepoint_order" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('market_research.group_manager'))]"/>
        </record>
        
        <record id="market_research_manager_pm_rule" model="ir.rule">
            <field name="name">Price Measurement Manager Access Rule</field>
            <field name="model_id" ref="market_research.model_market_research_price_measurement" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('market_research.group_manager'))]"/>
        </record>
   </data>
</odoo>