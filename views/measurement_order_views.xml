<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="measurement_order_list">
        <field name="name">market_research.measurement.order list</field>
        <field name="model">market_research.measurement.order</field>
        <field name="arch" type="xml">
        <tree>
            <field name="summary"/>
            <field name="responsible_id"/>
            <field name="deadline_date"/>
        </tree>
        </field>
    </record>
    
    <record model="ir.ui.view" id="measurement_order_form">
        <field name="name">market_research.measurement.order form</field>
        <field name="model">market_research.measurement.order</field>
        <field name="arch" type="xml">
        <form string="Measurement Order">
            <header>
                <field name="stage" widget="statusbar" clickable="True"/>
            </header>
            <sheet string="Measurement Order">
                <div class="oe_title">
                    <h1 class="o_row">
                        <field name="name" readonly="1"/>
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="summary" />
                        <field name="responsible_id" />
                        <field name="deadline_date" />
                    </group>
                    <group>
                        <field name="create_date" readonly="1" />
                    </group>                    
                </group>
                <notebook>
                    <page name="tradepoint_page" string="Trade Points">
                        <field name="tradepoint_order_ids" nolabel="1" context="{'default_measurement_order_id': id}">
                            <tree string="Trade Points" editable="bottom" default_order="client_id">
                                <field name="client_id" />
                                <field name="assigned_user_id" /> 
                            </tree>
                        </field>
                    </page>
                    <page name="product_page" string="Products">
                        <field name="product_ids" nolabel="1" context="{'default_measurement_order_id': id}">
                            <tree string="Products" editable="bottom" default_order="product_id">
                                <field name="product_id" />
                                <field name="price" /> 
                            </tree>
                        </field>                        
                    </page>
                </notebook>
            </sheet>
        </form>
        </field>
    </record>

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="measurement_order_action_window">
        <field name="name">Measurement Orders</field>
        <field name="res_model">market_research.measurement.order</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    
    <!-- menu categories -->
    
    <menuitem 
        name="Measurement Orders" 
        id="menu_measurement_order" 
        parent="menu_root"
        sequence="1"
        action="measurement_order_action_window"/>

  </data>
</odoo>